<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Update</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('../assets/edit.jpg');
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            color: #ffffff;
        }

        .container {
            background-color:  rgba(0, 0, 0, 0.7);;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .tabs {
            display: flex;
            margin-bottom: 20px;
        }

        .tab {
            padding: 10px 20px;
            background-color: #1a1a1a;
            color: #ffffff;
            border: none;
            cursor: pointer;
            margin-right: 10px;
        }

        .tab.active {
            background-color: #00a086;
        }

        .note-card {
            background-color: rgba(26, 26, 26, 0.8);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .note-title {
            color: #00a086;
            margin: 0 0 10px 0;
        }

        .note-author {
            color: #888888;
            margin: 0 0 10px 0;
        }

        .note-description {
            margin-bottom: 20px;
        }

        .note-actions {
            display: flex;
            justify-content: flex-end;
        }

        .action-button {
            padding: 5px 10px;
            background-color: transparent;
            color: #ffffff;
            border: 1px solid #ffffff;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
        }
        .card-body,.card-header{
            background-color: rgba(26, 26, 26, 0.8);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Update Your Profile</h1>
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-header">
                <h4 class="card-title">Profile Information</h4>
            </div>
            <div class="card-body">
                <form id="profile-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="photo" class="cursor-pointer">
                            <div class="btn btn-primary">
                                <i class="fas fa-camera"></i> Change Photo
                            </div>
                        </label>
                        <input id="photo" type="file" name="photo" accept="image/*" class="d-none" onchange="previewPhoto(event)">
                        <div class="avatar mt-3">
                            <img id="avatar" src="<%= user && user.photo ? 'data:image/jpeg;base64,' + user.photo : 'assets/user-icon.png' %>" alt="<%= user.user_name %>" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">Username</label>
                        <input id="username" class="form-control" value="<%= user.user_name %>" disabled>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" class="form-control" value="<%= user.email %>" required>
                    </div>

                    <div class="form-group">
                        <label for="phoneNumber">Phone Number</label>
                        <input id="phoneNumber" name="phoneNumber" type="tel" class="form-control" value="<%= user.phone_no %>">
                    </div>

                    <div class="form-group">
                        <label for="place">Place</label>
                        <input id="place" name="place" class="form-control" value="<%= user.place %>">
                    </div>

                    <div class="form-group">
                        <label for="bio">Bio</label>
                        <textarea id="bio" name="bio" class="form-control" rows="4"><%= user.bio %></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Save Changes</button>
                        <button id="backButton" class="btn btn-link back-button" onclick="goBack()">‚Üê Back</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewPhoto(event) {
            const avatar = document.getElementById('avatar');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    avatar.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }

        document.getElementById('profile-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);

            fetch('/edit', {
                method: 'POST',
                body: formData,
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    alert(`Error: ${data.error}`);
                } else {
                    alert('Profile updated successfully! Login in again to see the changes.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating the profile.');
            });
        });

        function goBack() {
            history.back();
        }
    </script>
</body>
</html>
